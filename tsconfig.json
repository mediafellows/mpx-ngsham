{
  "compilerOptions": {
    "removeComments": true,
    "noImplicitAny": false,
    "declaration": false,
    "target": "ES5",
    "out": "./dist/ngsham.js",
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "filesGlob": [
    "./ngsham.d.ts",
    "./src/*.ts",
    "./src/**/*.ts"
  ],
  "files": [
    "./ngsham.d.ts",
    "./src/core.ts",
    "./src/decorators.ts",
    "./src/ngsham.ts",
    "./src/ngshim.ts",
    "./src/reflection.ts",
    "./src/util.ts",
    "./src/component/abstract/abstract_component.1.x.ts",
    "./src/component/abstract/abstract_component.ts",
    "./src/component/component.1.3.ts",
    "./src/component/component.1.4.ts",
    "./src/component/component.1.5.ts",
    "./src/component/component.2.alpha.ts",
    "./src/component/component.legacy.ts"
  ],
  "atom": {
    "rewriteTsconfig": true,
    "compileOnSave": false
  }
}
